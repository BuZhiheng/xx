<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="@string/platform_plan_name"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="@string/platform_plan_name_hint"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/text_content_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="@string/platform_plan_desc"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="@string/platform_plan_desc_hint"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/text_content_color"
            />
    </LinearLayout>
</LinearLayout>