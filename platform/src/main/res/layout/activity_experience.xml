<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <include layout="@layout/activity_common_refresh_recycle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_experience_my"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_main_color"
            android:gravity="center"
            android:text="@string/platform_experience_my"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_experience_more"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cortpGray"
            android:gravity="center"
            android:text="@string/platform_experience_more"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>