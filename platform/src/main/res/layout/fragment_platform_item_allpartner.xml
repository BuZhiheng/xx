<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_to_allpartner"
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home_to_allpartner"
        android:text="@string/platform_activity_partner"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <TextView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:text="@string/platform_look_all"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/text_des_color"
        android:gravity="center"
        android:visibility="gone"
        />
    <ImageView
        android:layout_gravity="center_vertical|right"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="@dimen/margin_20"
        android:src="@drawable/ic_common_right"
        android:visibility="gone"
        />
</FrameLayout>