<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_firefly_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:padding="@dimen/margin_10"
    android:background="@drawable/bg_common_white_click">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_firefly_item_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="20dp"
            android:text="@string/platform_test_mid"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/text_title_color"
            />
        <TextView
            android:id="@+id/tv_firefly_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_plan_item_flow2"
            android:text="@string/platform_introduced"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/line_bg"
        />
    <ImageView
        android:id="@+id/iv_firefly_item1"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="fitStart"
        android:src="@drawable/ic_platform_hot"
        />
    <TextView
        android:id="@+id/tv_firefly_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="@string/platform_test"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/text_content_color"
        />
</LinearLayout>