<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_platform_item_home"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@drawable/bg_home_serch_imput"
    android:gravity="center"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_platform_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home_serch_imput"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:id="@+id/iv_platform_item_home"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/def_height"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_platform_item_home"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:text=""
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/font_normal2"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_platform_item_home_tagrent"
                android:layout_width="@dimen/margin_30"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_platform_hometag_rent"
                android:scaleType="fitStart"
                />
            <ImageView
                android:id="@+id/iv_platform_item_home_tagsale"
                android:layout_width="@dimen/margin_30"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_platform_hometag_sale"
                android:scaleType="fitStart"
                />
            <ImageView
                android:id="@+id/iv_platform_item_home_tageye"
                android:layout_width="@dimen/margin_30"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_platform_hometag_eye"
                android:scaleType="fitStart"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>