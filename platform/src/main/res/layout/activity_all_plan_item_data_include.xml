<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_allplan_type"
    android:layout_width="match_parent"
    android:layout_height="@dimen/def_height"
    android:background="@color/bg_white_little"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:id="@+id/ll_allplan_type1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="onClick"
        >
        <TextView
            android:id="@+id/tv_allplan_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platform_all_type"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/text_title_color"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/ic_platform_down"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_allplan_type2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_5"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="onClick"
        >
        <TextView
            android:id="@+id/tv_allplan_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platform_all_type"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/text_title_color"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/ic_platform_down"
            />
    </LinearLayout>
</LinearLayout>