<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.jaydenxiao.common.commonwidget.CustomTitleBar
        android:id="@+id/custom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_white="true"
        app:title="@string/register_save"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/activity_register_auth_phone"/>
        <include layout="@layout/activity_register_auth_code"/>
        <include layout="@layout/activity_register_auth_password"/>
    </FrameLayout>
</LinearLayout>