<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_register_auth_code"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:visibility="gone"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:text="输入验证码"
        android:textSize="30dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我们已向 "
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/tv_register_auth_phone_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="15100001101"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 发送验证码短信,请查"
            android:textSize="@dimen/font_normal2"
            android:textColor="@color/gray"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="看短信并输入验证码"
        android:textSize="@dimen/font_normal2"
        android:textColor="@color/gray"
        />
    <com.jaydenxiao.common.commonwidget.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_30"
        android:inputType="number"
        android:text=""
        android:textColor="@color/color_main_color"
        android:textSize="20sp"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/line_bg"
        app:bottomLineSelectedColor="@color/color_main_color"
        app:figures="6"
        app:verCodeMargin="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_register_auth_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收短信大约需要"
                android:textColor="@color/gray"
                />
            <TextView
                android:id="@+id/tv_register_auth_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_main_color"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_register_auth_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:visibility="gone"
            />
    </FrameLayout>
</LinearLayout>