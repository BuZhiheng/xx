<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service_parts_list"
            android:textColor="#ff333333"
            android:textSize="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_parts_time"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="2017/07/09" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="8dp"
        android:id="@+id/rv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_sign_time"
        style="@style/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        tools:text="签收时间: 2017/07/09" />


</LinearLayout>