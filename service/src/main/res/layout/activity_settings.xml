<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <com.allen.library.CommonTextView
        android:id="@+id/tv_change_pw"
        android:layout_width="match_parent"
        app:cSetMaxEms="50"
        android:layout_height="50dp"
        android:background="@color/white"
        app:cBothDividerLineMarginLeft="10dp"
        app:cBothDividerLineMarginRight="10dp"
        app:cDividerLineColor="@color/divider"
        app:cDividerLineHeight="1dp"
        app:cLeftTextSize="@dimen/textSize_15"
        app:cLeftTextString="@string/change_pw"
        app:cLeftViewPaddingLeft="10dp"

        app:cRightIconResForDrawableLeft="@drawable/icon_right"
        app:cUseRipple="true" />

    <com.allen.library.CommonTextView
        android:id="@+id/tv_version"
        app:cSetMaxEms="50"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:enabled="false"
        android:paddingRight="10dp"
        app:cBothDividerLineMarginLeft="10dp"
        app:cBothDividerLineMarginRight="10dp"
        app:cDividerLineColor="@color/divider"
        app:cDividerLineHeight="0dp"
        app:cLeftTextSize="@dimen/textSize_15"
        app:cLeftTextString="@string/version"
        app:cLeftViewPaddingLeft="10dp"
        app:cRightTextSize="@dimen/textSize_15"
        app:cRightTextString="" />

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main_color"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="@string/mine_cancellation"
        android:textColor="@color/white" />
</LinearLayout>