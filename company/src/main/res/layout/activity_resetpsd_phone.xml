<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_resetpsd_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/tv_resetpsd_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:text="请填写您要找回密码的账号"
        android:textColor="@color/text_title_color"
        android:textSize="@dimen/font_normal2"
        />
    <com.horen.cortp.company.widget.PWEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_20"
        android:textSize="@dimen/font_normal"
        android:hint="@string/register_phone_null"
        android:maxLength="11"
        android:inputType="phone"
        android:background="@color/white"
        app:x_clearDrawable="@drawable/icon_hide"
        app:x_hidePwdDrawable="@null"
        app:x_showPwdDrawable="@null"
        />
    <com.jaydenxiao.common.commonwidget.RippleButton
        android:id="@+id/bt_resetpsd_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        app:gray_text="下一步"
        app:green_text="下一步"
        app:loading_text="加载中"
        />
</LinearLayout>
