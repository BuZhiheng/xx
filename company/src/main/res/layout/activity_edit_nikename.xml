<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F1E"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/bg" />

    <com.horen.cortp.company.widget.ClearView
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:hint="@string/enter_2characters"
        android:inputType="text"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:textColorHint="@color/color_D8D"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:text="@string/enter_2characters"
        android:visibility="gone" />

    <com.allen.library.SuperButton
        android:id="@+id/bt_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_30"
        android:enabled="false"
        android:text="@string/title_save"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_15"
        app:sCornersRadius="5dp"
        app:sSelectorDisableColor="@color/DCDCDC"
        app:sSelectorNormalColor="@color/color_main_color"
        app:sSelectorPressedColor="@color/color_main_color"
        app:sUseSelector="true" />

</LinearLayout>